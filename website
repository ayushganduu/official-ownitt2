    <script>
        function validateAndEnter() {
            const mobile = document.getElementById('mobileEntry').value;
            const errorElement = document.getElementById('mobileError');
            
            // Validate 10-digit Indian mobile number
            const mobileRegex = /^[6-9]\d{9}$/;
            
            if (!mobileRegex.test(mobile)) {
                errorElement.classList.remove('hidden');
                return;
            }
            
            errorElement.classList.add('hidden');
            
            // Save mobile number (in real implementation, this would be sent to backend)
            localStorage.setItem('userMobile', mobile);
            
            // Hide entry gate and show main website
            document.getElementById('entryGate').classList.add('hidden');
            document.getElementById('mainWebsite').classList.remove('hidden');
            
            // Send email notification about new entry
            sendEntryNotification(mobile);
        }

        function sendEntryNotification(mobile) {
            // In real implementation, this would be handled by backend
            const subject = 'New Website Entry - Ownitt Ltd.';
            const body = `New user entered the website with mobile number: ${mobile}`;
            console.log('Entry notification:', { mobile, subject, body });
        }

        function showQuotationForm() {
            hideAllForms();
            document.getElementById('quotationFormSection').classList.remove('hidden');
            document.getElementById('quotationFormSection').scrollIntoView({ behavior: 'smooth' });
        }

        function showServiceForm() {
            hideAllForms();
            document.getElementById('serviceFormSection').classList.remove('hidden');
            document.getElementById('serviceFormSection').scrollIntoView({ behavior: 'smooth' });
        }

        function hideAllForms() {
            document.getElementById('quotationFormSection').classList.add('hidden');
            document.getElementById('serviceFormSection').classList.add('hidden');
        }

        function submitForm(event, type) {
            event.preventDefault();
            
            const form = event.target;
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());
            
            // Add entry mobile number
            data.entryMobile = localStorage.getItem('userMobile');
            
            // Prepare email data
            const subject = type === 'quotation' ? 
                'New Quotation Request - Ownitt Ltd.' : 
                'New Service Request - Ownitt Ltd.';
            
            const emailBody = `
                New ${type} request received:
                
                Full Name: ${data.fullName}
                Mobile Number: ${data.mobile}
                Address: ${data.address || 'Not provided'}
                Entry Mobile: ${data.entryMobile}
                
                Submitted on: ${new Date().toLocaleString()}
            `;
            
            // In real implementation, this would be sent to backend
            console.log('Form submission:', { type, data, subject, emailBody });
            
            // Show success message
            alert('Thank you! Your request has been submitted successfully. We will contact you soon.');
            
            // Reset form
            form.reset();
            hideAllForms();
            
            // Create mailto link as fallback
            const mailto = `mailto:ownittshopping@gmail.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(emailBody)}`;
            window.open(mailto);
        }

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });

        // Add loading animation
        window.addEventListener('load', function() {
            document.body.classList.add('loaded');
        });
    </script>
</body>
